datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Student {
    email     String    @id
    studentId Int       @unique
    fname     String
    lname     String
    // additional infos
    birthday  DateTime?
    phone     String?
    // additional login method
    password  String?
    // admin subclass
    admin     Admin?
    // activity logs
    logs      Log[]
}

model Admin {
    // student id of admin
    studentId Int     @id
    student   Student @relation(fields: [studentId], references: [studentId])
    // created logs
    logs      Log[]
}

model Log {
    createdAt DateTime @id @default(now())
    // the student
    studentId Int
    student   Student  @relation(fields: [studentId], references: [studentId])
    // the one in charge of checking in/out at that moment
    adminId   Int
    admin     Admin    @relation(fields: [adminId], references: [studentId])
    // enter or leave
    goingIn   Boolean
}
