datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Student {
    email    String      @id
    id       Int         @unique
    fname    String
    lname    String
    // additional infos
    birthday DateTime?
    phone    String?
    // additional login method
    password String?
    // admin subclass
    admin    Admin?
    // activity logs
    entries  Reception[]
}

model Admin {
    // student id of admin
    id         Int         @id
    student    Student     @relation(fields: [id], references: [id])
    // created logs
    receptions Reception[]
}

// checking in/out event
model Reception {
    createdAt DateTime @id @default(now())
    studentId Int
    student   Student  @relation(fields: [studentId], references: [id])
    // the one in charge of card swiping
    adminId   Int
    admin     Admin    @relation(fields: [adminId], references: [id])
}

model Blacklist {
    createdAt DateTime  @default(now())
    expiredAt DateTime?
    studentId Int       @id
}
