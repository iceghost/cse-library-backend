datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Student {
    email    String      @id
    id       Int         @unique
    fname    String
    lname    String
    // additional infos
    birthday DateTime?
    phone    String?
    // additional login method
    password String?
    // admin subclass
    admin    Admin?
    // activity logs
    signIns  SignIn[]
    entries  Reception[]
}

model Admin {
    // student id of admin
    id         Int         @id
    student    Student     @relation(fields: [id], references: [id])
    // created logs
    receptions Reception[]
}

model Log {
    createdAt DateTime   @id @default(now())
    // what kind of event
    reception Reception?
    signIn    SignIn?
}

// checking in/out event
model Reception {
    createdAt DateTime @id
    log       Log      @relation(fields: [createdAt], references: [createdAt])
    studentId Int
    student   Student  @relation(fields: [studentId], references: [id])
    // the one in charge of card swiping
    adminId   Int
    admin     Admin    @relation(fields: [adminId], references: [id])
    isCheckIn Boolean
}

// sign in event
model SignIn {
    createdAt DateTime @id
    log       Log      @relation(fields: [createdAt], references: [createdAt])
    id        Int
    student   Student  @relation(fields: [id], references: [id])
}
